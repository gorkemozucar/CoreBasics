@using CoreDepartman.Models
@model List<personel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<br />
<table class="table table-bordered">
    <tr>
        <th>id </th>
        <th>ad </th>
        <th>soyad</th>
        <th>sehir</th>
        <th>departman</th>
        <th>Sil</th>
        <th>Guncelle</th>
       

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.perid</td>
            <td>@x.ad</td>
            <td>@x.soyad</td>
            <td>@x.sehir</td>
            <td>@x.depart</td>
            <td><a href="/depart/DepartmanSil/@x.perid" class="btn btn-danger">Sil</a></td>
            <td><a href="/depart/DepartmanGetir/@x.perid" class="btn btn-success">Guncelle</a></td>
            

        </tr>
    }
</table>
<a href="/depart/YeniDepartman" class="btn btn-primary">Yeni Departman Ekle</a>
